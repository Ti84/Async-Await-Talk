@import "_deps"
@import "_code"

yellow = #FFDD00
orange = #FF9D00

html {
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

// Mixin
random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

purple = #2E0067
blue = #193549


.slides > article
  padding 50px
  padding 20px
  &:before
    content ''
    display block
    width 100%
    height 100%
    position absolute
    filter grayscale(100%) contrast(200%)
    background:url(images/3.jpg); // blacksmith
    background-size cover
    top 0
    left 0
    z-index -2
  &:after
    z-index -1
    content ''
    display block
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    opacity 0.85
    background-image linear-gradient(random(0,360)deg, blue 0%, lighten(blue,10%) 100%);
  &.plain
    &:before, &:after
      display none


.slides > article.old-tools
  &:before
    background-image url("images/soldering.jpg") !important
    background-size contain
  &:after
    opacity 0.1


randomColor()
  return rgb(random(0,255),random(0,255),random(0,255))

combos = (#825854 #3de7e4) (#29519e #94eced) (#e26ab5 #1e4823) (#11feec #FF00E0) (#006C8D #006C8D) (#3a5c8e #eb821b) (#ca5723 #7d5794) (#6aa4e1 #ae5ceb) (#226443 #5e9ccd) (#6d6528 #3768f7) (#2decf5 #52aeea) (#d07dd7 #e1e34a) (#3456fd #14e839) (#f8078c #17156b)

randomGradient()
  n = random(1,13)
  combo = combos[n]
  return combo


for num in 1...40
  path = "images/"+ random(1,31)+".jpg"
  combo = randomGradient();
  .slides > article:nth-child(39n+{num})
    &:before
      background-image url(path)
      content combo[1]
    &:after
      rando = randomColor()
      background-image linear-gradient(random(0,360)deg, blue 0%, darken(blue,40%) 100%);

